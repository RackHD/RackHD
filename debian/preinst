#!/bin/bash

# Copyright 2016, DELL EMC, Inc.

set -e

SERVICES=("on-http" "on-taskgraph" "on-dhcp-proxy" "on-tftp" "on-syslog" "rackhd" "on-web-ui")

#############################################
# Enable services: on-http, on-dhcp-proxy, on-tftp, on-syslog, on-taskgraph, on-web-ui
#############################################
enable_services(){
    for i in ${SERVICES[@]}; do
        if [ -f /etc/default/${i} ];then
            echo "${i} is enabled"
        else
            touch /etc/default/${i}
        fi
    done
}

enable_services
